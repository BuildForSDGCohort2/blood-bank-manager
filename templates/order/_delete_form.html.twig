<form method="post" action="{{ path('order_delete', {'id': order.id, 'codeName': app.session.get('bloodBank').codeName}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
